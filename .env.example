# Storage (Oracle Object Storage via S3-compat)
STORAGE_BACKEND=oracle_s3
ORACLE_S3_ENDPOINT=https://<namespace>.compat.objectstorage.<region>.oraclecloud.com
ORACLE_S3_REGION=<region>
ORACLE_S3_NAMESPACE=<namespace>
ORACLE_S3_BUCKET=<bucket>
ORACLE_S3_ACCESS_KEY_ID=<access_key_id>
ORACLE_S3_SECRET_ACCESS_KEY=<secret_access_key>
PRESIGN_URL_TTL_SECONDS=900

# App
JWT_PRIVATE_KEY_PATH=/run/secrets/jwt_private.pem
JWT_PUBLIC_KEY_PATH=/run/secrets/jwt_public.pem
JWT_ALG=RS256
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
